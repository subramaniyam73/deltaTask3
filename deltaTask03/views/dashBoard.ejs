<%- include('partials/header') %>

<%- include("partials/navBar")%>

<h1 class="pageHeading">Dashboard</h1>
<h2 class="heading2 q1">Your Events( <span style="color:red"><%=eventsArray.length%></span> )</h2>
<div class="a1">
  <%eventsArray.forEach(function(current){%>
  <div class="detailsContainer2">
    <span class="detailsHeading detailsHeading2">Event Date:</span>
    <p class="detailsValue detailsValue2"><%=current.dateString%></p><br>
    <span class="detailsHeading detailsHeading2">Event Time:</span>
    <p class="detailsValue detailsValue2"><%=current.time%></p><br>
    <span class="detailsHeading detailsHeading2">Deadline:</span>
    <p class="detailsValue detailsValue2"><%=current.deadlineString%></p><br>
    <span class="detailsHeading detailsHeading2">Host:</span>
    <p class="detailsValue detailsValue2"><%=current.hostMail%></p><br>
    <span class="detailsHeading detailsHeading2">Header:</span>
    <p class="detailsValue detailsValue2"><%=current.header%></p><br>
    <a href="/events/<%=current._id%>" class="viewInvitation">VIEW INVITATION</a><br>
    <a href="/events/<%=current._id%>/attendance" class="viewInvitation">TAKE ATTENDANCE</a>
  </div>
  <%});%>

</div>


<h2 class="heading2 q2">Accepted Events( <span style="color:red"><%=otherEventsArray.length%></span> )</h2>
<div class="a2">
  <%otherEventsArray.forEach(function(current){%>
