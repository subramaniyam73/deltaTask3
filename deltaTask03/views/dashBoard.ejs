    <span class="detailsHeading detailsHeading2">Event Date:</span>
    <p class="detailsValue detailsValue2"><%=current.dateString%></p><br>
    <span class="detailsHeading detailsHeading2">Event Time:</span>
    <p class="detailsValue detailsValue2"><%=current.time%></p><br>
    <span class="detailsHeading detailsHeading2">Deadline:</span>
    <p class="detailsValue detailsValue2"><%=current.deadlineString%></p><br>
    <span class="detailsHeading detailsHeading2">Header:</span>
    <p class="detailsValue detailsValue2"><%=current.header%></p><br>
    <a href="/events/<%=current._id%>" class="viewInvitation">VIEW INVITATION</a>
  </div>
  <%});%>

</div>



<h2 class="heading2 q3">Invited Events( <span style="color:red"><%=invitedEventsArray.length%></span> )</h2>
<div class="a3">
  <%invitedEventsArray.forEach(function(current){%>
  <div class="detailsContainer2">
    <span class="detailsHeading detailsHeading2">Event Date:</span>
    <p class="detailsValue detailsValue2"><%=current.dateString%></p><br>
    <span class="detailsHeading detailsHeading2">Event Time:</span>
    <p class="detailsValue detailsValue2"><%=current.time%></p><br>
    <span class="detailsHeading detailsHeading2">Deadline:</span>
    <p class="detailsValue detailsValue2"><%=current.deadlineString%></p><br>
    <span class="detailsHeading detailsHeading2">Header:</span>
    <p class="detailsValue detailsValue2"><%=current.header%></p><br>
    <a href="/events/<%=current._id%>" class="viewInvitation">VIEW INVITATION</a>
  </div>
  <%});%>
</div>
<%if(!googleId){%>
  <p id="linkGoogleText" class="generalText" >Click the below button to link with your google account !</p><br>
  <a href="/auth/google" class="dashButtons2" id="linkGoogle" style="margin-top: 10px;">Link with Google Account</a>
<%}else{%>
  <p id="linkGoogleText" class="generalText" >Your google account has been linked !</p><br>

<%}%>

<script type="text/javascript">
  document.querySelector(".q1").addEventListener("click",function(){
    document.querySelector(".a1").classList.toggle("visible");
  });
  document.querySelector(".q2").addEventListener("click",function(){
    document.querySelector(".a2").classList.toggle("visible");
  });
  document.querySelector(".q3").addEventListener("click",function(){
    document.querySelector(".a3").classList.toggle("visible");
  });


</script>
